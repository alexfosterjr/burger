<div class="row">
 
    <div class="col-md-6">
        <h4 class="title">Ready to eat!</h4>
        <div>

            {{#each burgers}}
            {{#unless devoured}}
            <form action="burger/devour/{{id}}" method="POST">
                <div class="input-group">
                    <li class="form-control">{{id}}. {{burger_name}}</li>
                    <span class="input-group-btn">
                        <button class="btn btn-success btn-style" type="submit">Devour It!</button>
                    </span>
                </div>
            </form>
            {{/unless}}
            {{/each}}

        </div>
    </div>

  
    <div class="col-md-6">
        <h4>It's In Your Belly!</h4>
        <div>

            
            {{#each burgers}}
            {{#if this.devoured}}
            <div class="input-group">
                <li class="form-control">{{this.id}}. {{this.burger_name}}</li>
            </div>
            {{/if}}
            {{/each}}

        </div>
    </div>
</div>